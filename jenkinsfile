pipeline {
  agent any
  environment {
    IMAGE_TAG = "ci-docker:latest"
  }
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Create Staging Branch') {
      steps {
        bat 'git checkout -b staging'
        bat 'git push origin staging'
      }
    }
    stage('Install Dependencies') {
      steps {
        bat 'pip install -r requirements.txt'
      }
    }
    stage('Test') {
      steps {
        bat 'python -m pytest'
      }
    }
    stage('Build and Push Docker Image') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'docker-hub', usernameVariable: 'somala28', passwordVariable: 'MadoClovis123')]) {
          bat 'docker build -t $IMAGE_TAG .'
          bat 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
          bat 'docker push $IMAGE_TAG'
        }
      }
    }
    stage('Merge to Main Branch') {
      steps {
        bat 'git checkout main'
        bat 'git merge staging'
        bat 'git push origin main'
      }
    }
  }
}
