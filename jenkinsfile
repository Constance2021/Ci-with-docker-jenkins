pipeline {
  agent any
  environment {
    IMAGE_TAG = "ci-docker:latest"
  }
  stages {

    stage('Checkout') {
      steps {
        checkout scm
       
      }
    }
   stage('Creating the staging branch') {
  steps {
    withCredentials([sshUserPrivateKey(credentialsId:"github_s", keyFileVariable: "SSH_KEY")]) {

      bat "git branch --delete staging"
      bat "git checkout -b staging"
      // bat 'GIT_SSH_COMMAND="ssh -i $SSH_KEY" git push -u origin staging'
    }
  }
}


    stage('Install Dependencies') {
      steps {
        bat 'pip install -r requirements.txt'
      }
    }
    stage('Test') {
      steps {
        bat 'python -m unittest'
      }
    }
    stage('Build and Push Docker Image') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'docker-hub', usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_ACCESS_TOKEN')]) {
          bat 'docker build -t $IMAGE_TAG .'
          bat 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
          bat 'docker push $IMAGE_TAG'
        }
      }
    }
    stage('Merge to Main Branch') {
      steps {
        bat 'git checkout main'
        bat 'git merge staging'
        bat 'git push origin main'
      }
    }

  }
}
